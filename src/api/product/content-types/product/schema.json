{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "minLength": 3
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Electronics + Appliances",
        "Books",
        "Sports",
        "Fashion",
        "Computer + Accessories",
        "Furniture + Decor"
      ],
      "required": true
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "Red",
        "Blue",
        "Green",
        "Yellow",
        "Black",
        "Purple",
        "Brown",
        "Orange"
      ]
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "size": {
      "type": "string",
      "minLength": 2
    },
    "price": {
      "type": "biginteger",
      "required": true,
      "default": "0"
    },
    "carts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::cart.cart",
      "mappedBy": "products"
    },
    "purchases": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::purchase.purchase",
      "mappedBy": "products"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
